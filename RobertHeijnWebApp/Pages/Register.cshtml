@page
@model RobertHeijnWebApp.Pages.RegisterModel
@{
}
<div class="container w-50 mt-5">
		<form method="post">
			<h2> Register Form :</h2>
		<div class="row">
			<div class="col mb-4">
				<label asp-for="RegisterForm.Firstname" class="form-label" >Firstname</label>
				<input asp-for="RegisterForm.Firstname" class="form-control" placeholder="Enter your first name" >
				<span asp-validation-for="RegisterForm.Firstname" class="text-danger"></span>
			</div>
			<div class="col mb-4">
				<label asp-for="RegisterForm.Lastname" class="form-label" >Lastname</label>
				<input asp-for="RegisterForm.Lastname" class="form-control" placeholder="Enter your last name" >
				<span asp-validation-for="RegisterForm.Lastname" class="text-danger"></span>
			</div>
			<div class="col mb-4">
				<label asp-for="RegisterForm.Email" class="form-label" >Email</label>
					<input asp-for="RegisterForm.Email" class="form-control" placeholder="Enter your email">
					<span asp-validation-for="RegisterForm.Email" class="text-danger"></span>
			</div>
			
			<div class="mb-4">
				<label asp-for="RegisterForm.Address" class="form-label" >Address</label>
				<input asp-for ="RegisterForm.Address" class="form-control" placeholder="Enter your address" />
				<span asp-validation-for="RegisterForm.Address" class="text-danger"></span>
				
				<div class="mb-4">
					<label asp-for="RegisterForm.Username" class="form-label" >UserName</label>
					<input asp-for="RegisterForm.Username" class="form-control" placeholder="Enter your Username" />
					<span asp-validation-for="RegisterForm.Username" class="text-danger"></span>
				</div>
			
			<div class="mb-4">
				<label asp-for="RegisterForm.Password" class="form-label">Password</label>
				<input asp-for ="RegisterForm.Password" class="form-control" placeholder="Enter your password" />
				<span asp-validation-for="RegisterForm.Password" class="text-danger"></span>
			</div>
			
			<div class="mb-4">
				<label asp-for="RegisterForm.Biography" class="form-label">Biography </label>
				<input asp-for ="RegisterForm.Biography" class="form-control" placeholder="Enter your Biography" />
				<span asp-validation-for="RegisterForm.Biography" class="text-danger"></span>
			</div>
			<h6>@Model.messageLine</h6>
			
			 <div class="col text-center ">
				<button type = "submit"class="btn btn-default">Sign Up</button>
			 </div>
			
		</div>
		</form>
	</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}